# Core runtime configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
API_PREFIX=/api
# Allow both the production Vercel domain and local dev during testing
CLIENT_ORIGIN=https://matterz.vercel.app,http://localhost:5173
CLIENT_URL=https://matterz.vercel.app
CORS_ORIGIN=https://matterz.vercel.app,http://localhost:5173
# SERVE_CLIENT_FROM_API=false
# CLIENT_BUILD_PATH=../client/dist

# Database
MONGO_URI=mongodb+srv://your_user:your_password@your_cluster.mongodb.net/matters
MONGO_DBNAME=matters
MONGODB_URI=mongodb+srv://your_user:your_password@your_cluster.mongodb.net/matters
MONGODB_DB=matters
USE_IN_MEMORY_DB=false

# Authentication & tokens
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_SECRET=your_jwt_access_secret_here
JWT_ACCESS_EXP=15m
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_REFRESH_EXP=7d
REFRESH_TOKEN_EXPIRES_IN=30d
JWT_EXPIRES_IN=7d
DEFAULT_ROLE=user
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key

# Email / SMTP
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=your_email@example.com
EMAIL_FROM_NAME=Matters - Construction Management
SUPPORT_INBOX=support@example.com
SUPPORT_WEBHOOK_SECRET=your_support_webhook_secret

# Frontend URL (for password reset links in emails)
FRONTEND_URL=http://localhost:5173

# Messaging & queues
REDIS_URL=redis://localhost:6379
ENABLE_QUEUE_WORKERS=false

# File security
FILE_ENCRYPTION_KEY=your_file_encryption_key_here
ASSET_TOKEN_SECRET=your_asset_token_secret
ASSET_STORAGE_PROVIDER=drive
GOOGLE_OAUTH_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_OAUTH_REFRESH_TOKEN=your_google_oauth_refresh_token
GOOGLE_OAUTH_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id
GOOGLE_DRIVE_PUBLIC_URL_TEMPLATE=https://drive.google.com/uc?id={{fileId}}
GOOGLE_DRIVE_SUPPORT_SHARED=true

# External APIs
GEMINI_ENABLED=true
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image
MATTERS_GEMINI_API_KEY=your_gemini_api_key
MATTERS_CHAT_MODEL=
MATTERS_VISION_MODEL=
MATTERS_VISION_IMAGE_LIMIT=3
OPENWEATHER_API_KEY=your_openweather_api_key

# Payments (optional)
PAYMENTS_ENABLED=false
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Blockchain proofs (optional)
BLOCKCHAIN_CHAIN_NAME=Polygon PoS
BLOCKCHAIN_EXPLORER_BASE_URL=https://polygonscan.com/tx/
BLOCKCHAIN_PROOF_NAMESPACE=builtattic-proofs
BLOCKCHAIN_SYNC_INTERVAL_MINUTES=15

# Client URLs
APP_BASE_URL=https://your-app.vercel.app
CLIENT_BASE_URL=https://your-app.vercel.app
PUBLIC_CLIENT_URL=https://your-app.vercel.app
CLIENT_LOGIN_URL=https://your-app.vercel.app/login
PASSWORD_RESET_URL=https://your-app.vercel.app/reset-password
CLIENT_RESET_URL=https://your-app.vercel.app/reset-password

# Miscellaneous
KEEP_ALIVE_TIMEOUT_MS=620000
SERVICE_NAME=builtattic-server
LOG_LEVEL=info

# Super admin bootstrap
SUPERADMIN_EMAIL=superadmin@example.com
SUPERADMIN_PASSWORD=your_superadmin_password

# Seeding helpers
SEED_SUPERADMIN_EMAIL=superadmin@example.com
SEED_SUPERADMIN_PASSWORD=your_seed_password
ALLOW_WORKSPACE_PURGE=true

# Client (Vite) toggles
VITE_ENABLE_PORTAL_API=true
VITE_ENABLE_MARKETPLACE_API=false
VITE_ENABLE_OFFLINE_ACCOUNTS=false
VITE_GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
VITE_API_BASE_URL=/api
VITE_API_URL=http://localhost:4000
VITE_API_TIMEOUT_MS=15000
VITE_ENABLE_LOOKUP_API=false
VITE_VITRUVI_API_BASE=
VITE_MATTERS_API_BASE=
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
