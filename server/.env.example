# MATTERS Server Environment Variables

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0
API_PREFIX=/api
CORS_ORIGIN=http://localhost:5173

# Database
MONGO_URI=mongodb://localhost:27017/matters
MONGO_DBNAME=matters

# Authentication & tokens
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
JWT_ACCESS_EXP=15m
JWT_REFRESH_EXP=7d

# Google OAuth (Sign-In)
GOOGLE_CLIENT_ID=

# Email / SMTP
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM="Builtattic <support@example.com>"

# Google Drive (uploads)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REFRESH_TOKEN=
GOOGLE_OAUTH_REDIRECT_URI=urn:ietf:wg:oauth:2.0:oob
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_DRIVE_PUBLIC_URL_TEMPLATE=https://drive.google.com/uc?id={{fileId}}

# External APIs
OPENWEATHER_API_KEY=
GEMINI_ENABLED=false
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image

# Real-time (Pusher)
PUSHER_ENABLED=false
PUSHER_APP_ID=
PUSHER_KEY=
PUSHER_SECRET=
PUSHER_CLUSTER=

# Payments (Razorpay)
PAYMENTS_ENABLED=false
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# Client URLs
APP_BASE_URL=http://localhost:5173
CLIENT_BASE_URL=http://localhost:5173
CLIENT_LOGIN_URL=http://localhost:5173/login
PASSWORD_RESET_URL=http://localhost:5173/reset-password
CLIENT_RESET_URL=http://localhost:5173/reset-password
CLIENT_INVITE_URL=http://localhost:5173

# Miscellaneous
KEEP_ALIVE_TIMEOUT_MS=620000
SERVICE_NAME=matters-server
